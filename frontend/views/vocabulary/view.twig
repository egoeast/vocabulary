
{{ use('/common/widgets/LangSwitch') }}

<h1>{{ lang('frontend', 'Vocabulary') }} : {{ voc.name }}</h1>
<h3>{{ lang('frontend', 'Language pair') }} : {{ voc.lang_pair }}</h3>

{% set form = active_form_begin({
    'id' : 'translation-form',
})%}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            {{ form.field(translation, 'text').textarea({'rows' : '4'}) | raw }}
        </div>
        <div class="col-md-6">
            {{ form.field(translation, 'translation').textarea({'rows' : '4'}) | raw }}
        </div>
    </div>
</div>

<div class="form-group">
    {{ html.a(lang('app', 'Translate'), '#', {'class':'btn btn-default dic-trans-btn'}) | raw }}

    <input type="submit" value="Сохранить" class="btn btn-primary" />

</div>
</div>

{{ active_form_end() }}

<div class="container">
    <div class="row">
        <div class="col-md-6" id="trans-variants">

        </div>
        <div class="col-md-6" id="trans-example">

        </div>
    </div>
</div>

<table class="table">
    <thead>
    <tr>
        <th>{{ lang('frontend', 'Text') }}</th>
        <th>{{ lang('frontend', 'Translation') }}</th>
        <th>{{ lang('frontend', 'Date') }}</th>
    </tr>
    </thead>
    <tbody>
{% for item in trans %}


            <tr>
                <td>{{ item.text }}</td>
                <td>{{ item.translation }}</td>
                <td>{{ item.date }}</td>
            </tr>

{% endfor %}
    </tbody>
</table>